---
// Importamos los Tipos de TypeScript para calmar a la terminal
import type { GetStaticPathsOptions, Page } from 'astro';
import type { CollectionEntry } from 'astro:content';

import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

// 1. Tipamos los parámetros de la función (GetStaticPathsOptions)
export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
    const posts = (await getCollection('blog')).sort(
        (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
    );
    // Genera páginas con 8 noticias cada una
    return paginate(posts, { pageSize: 8 });
}

// 2. Tipamos la propiedad "page" para que TypeScript conozca su estructura
type Props = {
    page: Page<CollectionEntry<'blog'>>;
};

const { page } = Astro.props;

// 3. SEPARAMOS LAS NOTICIAS (Solo si estamos en la Página 1)
const isFirstPage = page.currentPage === 1;
const featuredPosts = isFirstPage ? page.data.slice(0, 2) : []; 
const regularPosts = isFirstPage ? page.data.slice(2) : page.data;    
---

<!doctype html>
<html lang="es">
    <head>
        <BaseHead title={`${SITE_TITLE} - Noticias (Página ${page.currentPage})`} description={SITE_DESCRIPTION} />
    </head>
    <body class="bg-gray-50 dark:bg-gray-900 transition-colors flex flex-col min-h-screen">
        <Header />
        
        {/* Usamos tu contenedor original max-w-5xl */}
        <main class="w-full max-w-5xl mx-auto px-4 md:px-8 lg:px-12 py-10 md:py-16 grow">            
            
            <div class="text-center mb-12">
                <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white sm:text-5xl">
                    Últimas <span class="text-blue-600 dark:text-blue-500">Noticias</span>
                </h1>
                <p class="mt-4 text-xl text-gray-500 dark:text-gray-400">
                    Explora lo más nuevo en tecnología y desarrollo.
                </p>
            </div>

            {/* SECCIÓN 1: LAS 2 NOTICIAS DESTACADAS (Se mantienen con tu diseño original, solo se ven en página 1) */}
            {isFirstPage && featuredPosts.length > 0 && (
                <section class="mb-12">
                    <ul class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        {
                            featuredPosts.map((post) => (
                                <li class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-gray-700 overflow-hidden group flex flex-col">
                                    <a href={`/blog/${post.slug}/`} class="block aspect-video overflow-hidden relative">
                                        {post.data.heroImage ? (
                                            <Image width={800} height={450} src={post.data.heroImage} alt={post.data.title} class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500" />
                                        ) : (
                                            <div class="w-full h-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
                                                <span class="text-gray-400 text-sm">Sin imagen</span>
                                            </div>
                                        )}
                                    </a>
                                    <div class="p-5 flex-1 flex flex-col">
                                        <div class="flex items-center justify-between mb-3">
                                            <a href={`/blog/category/${post.data.category || post.id.split('/')[0]}`} class="inline-block px-3 py-1 text-xs font-bold uppercase tracking-wider text-blue-700 bg-blue-100 dark:text-blue-300 dark:bg-blue-900/50 rounded-full hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors relative z-10">
    {(post.data.category || post.id.split('/')[0]).replace('-', ' ')}
</a>
                                            <p class="text-sm text-gray-500 dark:text-gray-400">
                                                <FormattedDate date={post.data.pubDate} />
                                            </p>
                                        </div>
                                        <a href={`/blog/${post.slug}/`} class="block group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors mb-2">
                                            <h4 class="text-xl font-bold text-gray-900 dark:text-white leading-tight line-clamp-2">
                                                {post.data.title}
                                            </h4>
                                        </a>
                                        {post.data.description && (
                                            <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-2 flex-1">
                                                {post.data.description}
                                            </p>
                                        )}
                                    </div>
                                </li>
                            ))
                        }
                    </ul>
                </section>
            )}

            {/* SECCIÓN 2: EL RESTO DE LAS NOTICIAS (Con tu diseño original) */}
            {regularPosts.length > 0 && (
                <section>
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
                            {isFirstPage ? 'Más publicaciones' : 'Archivo de noticias'}
                        </h2>
                        <hr class="grow ml-4 border-gray-200 dark:border-gray-700" />
                    </div>
                    
                    <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-5">
                        {
                            regularPosts.map((post) => (
                                <li class="bg-white dark:bg-gray-800 rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100 dark:border-gray-700 overflow-hidden group flex flex-col">
                                    <a href={`/blog/${post.slug}/`} class="block aspect-video overflow-hidden relative">
                                        {post.data.heroImage ? (
                                            <Image width={600} height={337} src={post.data.heroImage} alt={post.data.title} class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500" />
                                        ) : (
                                            <div class="w-full h-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
                                                <span class="text-gray-400 text-xs">Sin imagen</span>
                                            </div>
                                        )}
                                    </a>
                                    <div class="p-4 flex-1 flex flex-col">
                                        <div class="flex items-center justify-between mb-2">
                                            <a href={`/blog/category/${post.data.category || post.id.split('/')[0]}`} class="inline-block px-2 py-0.5 text-[10px] font-bold uppercase tracking-wider text-blue-700 bg-blue-50 dark:text-blue-300 dark:bg-blue-900/30 rounded-full hover:bg-blue-100 dark:hover:bg-blue-800 transition-colors relative z-10 border border-blue-100 dark:border-blue-800">
    {(post.data.category || post.id.split('/')[0]).replace('-', ' ')}
</a>
                                            <p class="text-xs text-gray-400">
                                                <FormattedDate date={post.data.pubDate} />
                                            </p>
                                        </div>
                                        <a href={`/blog/${post.slug}/`} class="block group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors mb-2">
                                            <h4 class="text-base font-bold text-gray-900 dark:text-white leading-tight line-clamp-2">
                                                {post.data.title}
                                            </h4>
                                        </a>
                                    </div>
                                </li>
                            ))
                        }
                    </ul>
                </section>
            )}
            
            {/* SECCIÓN 3: CONTROLES DE PAGINACIÓN (NUEVO) */}
            {page.lastPage > 1 && (
                <div class="flex items-center justify-between mt-16 pt-8 border-t border-gray-200 dark:border-gray-800">
                    
                    {/* Botón Anterior */}
                    {page.url.prev ? (
                        <a href={page.url.prev} class="px-5 py-2.5 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-900 dark:text-white font-semibold rounded-lg shadow-sm transition-colors flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
                            Anterior
                        </a>
                    ) : (
                        <span class="px-5 py-2.5 bg-gray-50 dark:bg-gray-900/50 border border-gray-100 dark:border-gray-800 text-gray-400 dark:text-gray-600 font-semibold rounded-lg cursor-not-allowed flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
                            Anterior
                        </span>
                    )}

                    {/* Indicador de Página */}
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400 hidden sm:block">
                        Página {page.currentPage} de {page.lastPage}
                    </span>

                    {/* Botón Siguiente */}
                    {page.url.next ? (
                        <a href={page.url.next} class="px-5 py-2.5 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-900 dark:text-white font-semibold rounded-lg shadow-sm transition-colors flex items-center gap-2">
                            Siguiente
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                        </a>
                    ) : (
                        <span class="px-5 py-2.5 bg-gray-50 dark:bg-gray-900/50 border border-gray-100 dark:border-gray-800 text-gray-400 dark:text-gray-600 font-semibold rounded-lg cursor-not-allowed flex items-center gap-2">
                            Siguiente
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                        </span>
                    )}
                    
                </div>
            )}

        </main>
        <Footer />
    </body>
</html>