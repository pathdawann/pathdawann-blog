---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Separamos las noticias
const featuredPosts = posts.slice(0, 2); // Las 2 primeras
const regularPosts = posts.slice(2);     // El resto
---

<!doctype html>
<html lang="es">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="bg-gray-50 dark:bg-gray-900 transition-colors">
        <Header />
        
        {/* CAMBIO 1: Reducimos el ancho máximo del contenedor de 6xl a 5xl */}
        <main class="w-full max-w-5xl mx-auto px-4 py-12">
            
            <div class="text-center mb-12">
                <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white sm:text-5xl">
                    Últimas <span class="text-blue-600 dark:text-blue-500">Noticias</span>
                </h1>
                <p class="mt-4 text-xl text-gray-500 dark:text-gray-400">
                    Explora lo más nuevo en tecnología y desarrollo.
                </p>
            </div>

            {/* SECCIÓN 1: LAS 2 NOTICIAS DESTACADAS (Se mantienen 2 columnas, pero son más pequeñas por el contenedor) */}
            <section class="mb-12">
                <ul class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {
                        featuredPosts.map((post) => (
                            <li class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-gray-700 overflow-hidden group flex flex-col">
                                <a href={`/blog/${post.id}/`} class="block aspect-video overflow-hidden relative">
                                    {post.data.heroImage ? (
                                        <Image width={800} height={450} src={post.data.heroImage} alt={post.data.title} class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500" />
                                    ) : (
                                        <div class="w-full h-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
                                            <span class="text-gray-400 text-sm">Sin imagen</span>
                                        </div>
                                    )}
                                </a>
                                <div class="p-5 flex-1 flex flex-col">
                                    <div class="flex items-center justify-between mb-3">
                                        <a href={`/blog/category/${post.id.split('/')[0]}`} class="inline-block px-3 py-1 text-xs font-bold uppercase tracking-wider text-blue-700 bg-blue-100 dark:text-blue-300 dark:bg-blue-900/50 rounded-full hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors relative z-10">
                                            {post.id.split('/')[0].replace('-', ' ')}
                                        </a>
                                        <p class="text-sm text-gray-500 dark:text-gray-400">
                                            <FormattedDate date={post.data.pubDate} />
                                        </p>
                                    </div>
                                    <a href={`/blog/${post.id}/`} class="block group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors mb-2">
                                        <h4 class="text-xl font-bold text-gray-900 dark:text-white leading-tight line-clamp-2">
                                            {post.data.title}
                                        </h4>
                                    </a>
                                    {post.data.description && (
                                        <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-2 flex-1">
                                            {post.data.description}
                                        </p>
                                    )}
                                </div>
                            </li>
                        ))
                    }
                </ul>
            </section>

            {/* SECCIÓN 2: EL RESTO DE LAS NOTICIAS */}
            {regularPosts.length > 0 && (
                <section>
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Más publicaciones</h2>
                        <hr class="flex-grow ml-4 border-gray-200 dark:border-gray-700" />
                    </div>
                    
                    {/* CAMBIO 2: Aumentamos columnas en pantallas medianas (3) y grandes (3) para reducir el tamaño */}
                    <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-5">
                        {
                            regularPosts.map((post) => (
                                <li class="bg-white dark:bg-gray-800 rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100 dark:border-gray-700 overflow-hidden group flex flex-col">
                                    <a href={`/blog/${post.id}/`} class="block aspect-video overflow-hidden relative">
                                        {post.data.heroImage ? (
                                            <Image width={600} height={337} src={post.data.heroImage} alt={post.data.title} class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500" />
                                        ) : (
                                            <div class="w-full h-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
                                                <span class="text-gray-400 text-xs">Sin imagen</span>
                                            </div>
                                        )}
                                    </a>
                                    <div class="p-4 flex-1 flex flex-col"> {/* Reduje un poco el padding a p-4 */}
                                        <div class="flex items-center justify-between mb-2">
                                            <a href={`/blog/category/${post.id.split('/')[0]}`} class="inline-block px-2 py-0.5 text-[10px] font-bold uppercase tracking-wider text-blue-700 bg-blue-50 dark:text-blue-300 dark:bg-blue-900/30 rounded-full hover:bg-blue-100 dark:hover:bg-blue-800 transition-colors relative z-10 border border-blue-100 dark:border-blue-800">
                                                {post.id.split('/')[0].replace('-', ' ')}
                                            </a>
                                            <p class="text-xs text-gray-400">
                                                <FormattedDate date={post.data.pubDate} />
                                            </p>
                                        </div>
                                        <a href={`/blog/${post.id}/`} class="block group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors mb-2">
                                            <h4 class="text-base font-bold text-gray-900 dark:text-white leading-tight line-clamp-2">
                                                {post.data.title}
                                            </h4>
                                        </a>
                                    </div>
                                </li>
                            ))
                        }
                    </ul>
                </section>
            )}
            
        </main>
        <Footer />
    </body>
</html>